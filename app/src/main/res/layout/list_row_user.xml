<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_grey"
    android:padding="8dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/listImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/profile_border"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="8dp" />


    <TextView
        android:layout_alignTop="@+id/listImage"
        android:layout_toRightOf="@+id/listImage"
        android:id="@+id/listNik"
        android:hint="Nik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listNik"
        android:id="@+id/listName"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listName"
        android:id="@+id/listEmail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listEmail"
        android:hint="Phone"
        android:id="@+id/listPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listPhone"
        android:hint="Plant"
        android:id="@+id/listPlant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listPlant"
        android:hint="Dept"
        android:id="@+id/listDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listDept"
        android:hint="Pwd"
        android:id="@+id/listPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listPwd"
        android:hint="RegDate"
        android:id="@+id/listRegDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_toRightOf="@+id/listImage"
        android:layout_below="@id/listRegDate"
        android:hint="Tag"
        android:id="@+id/listTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />



</RelativeLayout>