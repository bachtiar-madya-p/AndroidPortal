<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ppl2"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lin1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIK"/>
            <TextView
                android:id="@+id/PuserNik"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:text="9999999"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin1"
            android:id="@+id/lin2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"/>
            <EditText
                android:id="@+id/PuserPhone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="085747079410"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/lin2"
            android:id="@+id/lin3"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"/>
            <EditText
                android:id="@+id/PuserEmail"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hionji@danseterusnya.com"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin3"
            android:id="@+id/lin4"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plant"/>
            <EditText
                android:id="@+id/PuserPlant"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Developer at danseterusnya.com"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin4"
            android:id="@+id/lin5"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departement"/>
            <EditText
                android:id="@+id/PuserDept"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DanSeterusnya Dev."
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin5"
            android:id="@+id/lin6"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Date"/>
            <TextView
                android:id="@+id/PuserRegDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13 Ok 2017"
                android:textStyle="bold"/>

            <TextView
                android:visibility="invisible"
                android:id="@+id/PuserTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin6"
            android:id="@+id/lin7"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"/>
            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/PuserPwd"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:drawableLeft="@drawable/ic_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:text="1234567"
                app:drawable_hide="@drawable/ic_pwd_invisibility"
                app:drawable_show="@drawable/ic_pwd_visibility"
                android:textColor="@color/black"
                android:textColorHint="#999"
                app:tint_color="#ff00" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lin7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/selector_btn"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="Simpan"/>
        </LinearLayout>


    </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>